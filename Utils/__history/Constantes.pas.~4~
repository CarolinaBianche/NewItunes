  C_LINKINFO             ='';
  C_LINKTEXT             ='';



  {Expressões Regulares}
  C_EXP_CPF        = '([0-9]{2}[\.]?[0-9]{3}[\.]?[0-9]{3}'     +
                     '[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}'    +
                     '[\.]?[0-9]{3}[\.]?[0-9]{3}[-]?[0-9]{2})' ;

  C_EXP_EMAIL      = '^((?>[a-zA-Z\d!#$%&''*+\-/=?^_`{|}~]+\x20*' +
                     '|"((?=[\x01-\x7f])[^"\\]|\\[\x01-\x7f])*"\' +
                     'x20*)*(?<angle><))?((?!\.)(?>\.?[a-zA-Z\d!' +
                     '#$%&''*+\-/=?^_`{|}~]+)+|"((?=[\x01-\x7f])' +
                     '[^"\\]|\\[\x01-\x7f])*")@(((?!-)[a-zA-Z\d\' +
                     '-]+(?<!-)\.)+[a-zA-Z]{2,}|\[(((?(?<!\[)\.)' +
                     '(25[0-5]|2[0-4]\d|[01]?\d?\d)){4}|[a-zA-Z\' +
                     'd\-]*[a-zA-Z\d]:((?=[\x01-\x7f])[^\\\[\]]|' +
                     '\\[\x01-\x7f])+)\])(?(angle)>)$';

