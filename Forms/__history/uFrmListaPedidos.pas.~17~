    rec_login: TRectangle;
    edt_busca: TEdit;
    Image2: TImage;
    procedure FormCreate(Sender: TObject);
    procedure speBtnMenuClick(Sender: TObject);
    procedure speBtnAtualizarClick(Sender: TObject);
    procedure btnPesquisaFiltroClick(Sender: TObject);
