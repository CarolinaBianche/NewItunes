procedure TFrmInformativo.EdtQtdEmKeyDown(Sender: TObject; var Key: Word;
  var KeyChar: Char; Shift: TShiftState);
begin
  inherited;
  if(Key = 13)then
  Begin
   edtQtdPL.SetFocus;
  end;

  if FrmMain.VerificaCarEspeciais(KeyChar) Then
   begin
    KeyChar:=#0;
    EdtQtdEm.SetFocus;
    FrmMain.MensagemTost('Ops, esse campo só aceita números inteiros.Verifique!');
   end;
end;

